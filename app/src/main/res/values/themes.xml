<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodgo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:windowIsTranslucent">true</item>

        <!-- Primary color -->
        <item name="colorPrimary">#EF2A39</item>
        <!-- Dark Primary color (used in status bar) -->
        <item name="colorPrimaryDark">#E2136E</item>
        <!-- Accent color -->
        <item name="colorAccent">#E2136E</item>
        <!-- Color for activated controls -->
        <item name="colorControlActivated">#ffffff</item>
        <!-- Text color for toolbar and title -->
        <item name="android:textColorPrimary">#ffffff</item>
        <!-- Background color -->
        <item name="android:windowBackground">#ffffff</item>
        <!-- Floating action button color -->
        <item name="colorSurface">#ffffff</item>
        <!-- Set RadioButton color -->
        <item name="android:buttonTint">#E2136E</item>


        <!-- Set default text color for AutoCompleteTextView -->
        <item name="android:textColor">#000000</item> <!-- Black text color -->

        <!-- Set hint text color -->
        <item name="android:textColorHint">#8a8a8a</item> <!-- Gray hint color -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>



    <style name="SearchViewStyle">
        <item name="android:queryBackground">@android:color/transparent</item> <!-- Remove the background -->
        <item name="android:iconifiedByDefault">false</item> <!-- Set the SearchView to not be iconified by default -->
        <item name="android:textColorHint">@android:color/black</item> <!-- Set text color if needed -->
        <item name="android:textColor">@android:color/black</item> <!-- Set text color if needed -->
        <item name="android:focusable">false</item> <!-- Prevent focusing on the SearchView -->
    </style>




    <style name="BottomNavTextActive">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Inactive Text Size -->
    <style name="BottomNavTextInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item> <!-- টেক্সট সাইজ ছোট করা হলো -->
    </style>

    <style name="FlatCornersNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="shapeAppearance">@style/FlatShapeAppearance</item>
    </style>

    <style name="FlatShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="NoRippleBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@null</item>
        <item name="android:selectableItemBackground">@null</item>
    </style>



    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <!-- Custom shape appearance -->
    <style name="CustomShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CustomHintStyle">
        <item name="android:textColorHint">@android:color/darker_gray</item>  <!-- Gray hint color -->
    </style>


</resources>
